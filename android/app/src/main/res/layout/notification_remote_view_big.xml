<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#0000FF00">

    <ImageView
        android:id="@+id/imageView_media_big"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/launch_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/imageView_media_big">

        <TextView
            android:id="@+id/textView_title_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:ellipsize="middle"
            android:maxLines="1"
            android:text="Title"
            android:textSize="18sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/textView_subtitle_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:ellipsize="middle"
            android:maxLines="1"
            android:text="subtitle"
            android:textSize="14sp"
            tools:text="subtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_prePlay_big"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:padding="0dp"
                android:paddingHorizontal="0dp"
                android:paddingVertical="0dp"
                android:src="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/button_playControl_big"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:padding="0dp"
                android:src="@android:drawable/ic_media_pause" />

            <ImageButton
                android:id="@+id/button_postPlay_big"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:padding="0dp"
                android:src="@android:drawable/ic_media_ff" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>